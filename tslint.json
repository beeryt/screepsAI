{
  /* "extends": [
    "tslint:recommended"
  ], */
  "rules": {
    /* TypeScript-specific */
    "prefer-for-of": true,
    /* Functionality */
    "curly": [true, "ignore-same-line"],
    "no-duplicate-super": true,
    "no-duplicate-variable": [true, "check-parameters"],
    "no-for-in-array": false,
    "no-shadowed-variable": true,
    "no-tautology-expression": true,
    "no-var-keyword": true,
    "static-this": true,
    /* Maintainability */
    "cyclomatic-complexity": true,
    "deprecation": true,
    "prefer-const": true,
    "prefer-readonly": true,
    /* Style */
    "array-type": [true, "array"],
    "binary-expression-operand-order": true,
    "class-name": true,
    "comment-format": [true, "check-lowercase", {"ignore-words": ["TODO"]}],
    "completed-docs": false,
    "file-name-casing": false,
    "no-boolean-literal-compare": true,
    "no-redundant-jsdoc": true,
    "no-unnecessary-callback-wrapper": true,
    "no-unnecessary-initializer": true,
    "prefer-method-signature": true,
    "prefer-switch": true,
    "prefer-template": false,
    "prefer-while": true,
    "return-undefined": true,
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "require-const-for-all-caps"],
    "align": [true, "parameters", "arguments", "statements", "members", "elements"],
    "arrow-parens": true,
    "eofline": true,
    "indent": [true, "spaces", 2],
    "newline-before-return": true,
    "linebreak-style": [true, "LF"],
    "no-consecutive-blank-lines": false,
    "no-irregular-whitespace": true,
    "no-trailing-whitespace": true,
    "number-literal-format": true,
    "quotemark": [true, "double"],
    "semicolon": [true, "always"],
    "typedef-whitespace": false,
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-module", "check-separator", "check-rest-spread", "check-type", "check-preblock", "check-postbrace"]

  }
}
